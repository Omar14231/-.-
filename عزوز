			local glowEffect = protectionBox.UIStroke
			if glowEffect then
				fadeIn(glowEffect, "Transparency", 0.2, 0.8)
				task.wait(0.8)
				fadeOut(glowEffect, "Transparency", 0.5, 0.8)
				task.wait(0.8)
			else
				break
			end
		end
	end)()
	
	task.wait(3)
	
	-- 8. Ø¥Ø®ÙØ§Ø¡ Ù…Ø±Ø¨Ø¹ Ø§Ù„Ø­Ù…Ø§ÙŠØ© Ø¨Ø§Ù„ØªØ¯Ø±ÙŠØ¬
