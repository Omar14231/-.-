-- Ø¯Ø§Ù„Ø© Ù„ØªØ·Ø¨ÙŠÙ‚ Ø§Ù„Ø­Ù…Ø§ÙŠØ© Ø§Ù„Ø¨ØµØ±ÙŠØ©
local function applyVisualProtection()
	-- ØªØ£Ø«ÙŠØ± Ø­Ù…Ø§ÙŠØ© Ø°Ù‡Ø¨ÙŠ Ù‚ÙˆÙŠ
	local forceField = Instance.new("ForceField")
	forceField.Visible = false -- Ù†Ø®ÙÙŠ ForceField Ø§Ù„Ø£ØµÙ„ÙŠ
	forceField.Parent = character
	
	-- ØªØ£Ø«ÙŠØ±Ù†Ø§ Ø§Ù„Ø®Ø§Øµ Ø§Ù„Ø°Ù‡Ø¨ÙŠ
	local goldenShield = Instance.new("Part")
	goldenShield.Name = "GoldenShield"
	goldenShield.Size = Vector3.new(7, 8, 7)
	goldenShield.Transparency = 0.3
	goldenShield.Color = Color3.fromRGB(255, 215, 0) -- Ø°Ù‡Ø¨ÙŠ
	goldenShield.Material = Enum.Material.Neon
	goldenShield.CanCollide = false
	goldenShield.Anchored = false
	goldenShield.Parent = character
	
	-- Weld Ù„Ù„ØªØ£Ø«ÙŠØ±
	local weld = Instance.new("Weld")
	weld.Part0 = humanoidRootPart
	weld.Part1 = goldenShield
	weld.C0 = CFrame.new(0, -0.5, 0)
	weld.Parent = goldenShield
	
	-- Ø¶ÙˆØ¡ Ø°Ù‡Ø¨ÙŠ Ù‚ÙˆÙŠ
	local goldenLight = Instance.new("PointLight")
	goldenLight.Name = "GoldenLight"
	goldenLight.Color = Color3.fromRGB(255, 215, 0)
	goldenLight.Brightness = 3
	goldenLight.Range = 20
	goldenLight.Shadows = true
	goldenLight.Parent = goldenShield
	
	-- ØªØ£Ø«ÙŠØ± ØªÙˆÙ‡Ø¬ Ù…ØªØ­Ø±Ùƒ
	spawn(function()
		while goldenShield and goldenShield.Parent do
			-- ØªØºÙŠÙŠØ± Ø§Ù„Ø´ÙØ§ÙÙŠØ© Ø¨ØªØ£Ø«ÙŠØ± ØªÙ†ÙØ³ÙŠ
			for i = 0.3, 0.7, 0.05 do
				if not goldenShield then break end
				goldenShield.Transparency = i
				task.wait(0.1)
			end
			for i = 0.7, 0.3, -0.05 do
				if not goldenShield then break end
				goldenShield.Transparency = i
				task.wait(0.1)
			end
		end
	end)
	
	return goldenShield
end

