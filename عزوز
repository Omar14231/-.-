			local method = getnamecallmethod()
			local args = {...}
			
			if protectionActive then
				-- Ù…Ù†Ø¹ Ø£ÙŠ Ù…Ø­Ø§ÙˆÙ„Ø§Øª Ù„Ø·Ø±Ø¯ Ø§Ù„Ù„Ø§Ø¹Ø¨
				if method == "Kick" or method == "kick" then
